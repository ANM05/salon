<div>
    <div class="row">
        <div class="col-4">
    <h4>View Stylist details</h4>
    <p>Name: $stylist.getName()</p>
    <p>Mobile: $stylist.getMobile()</p>
    <p>E-Mail: $stylist.getEmail()</p>

    <a href="/stylists/new"><button class="btn-lg">Add new Stylist</button></a>
    <a href="/clients/new"><button class="btn-lg">Add new Client</button></a>
        </div>
        <div class="col-8">
            <h5>Clients List</h5>
            <div class="list-group">
                #foreach ($client in $stylist.getClients())
                <a href="/stylist/$stylist.getId()/client/$client.getId()" class="list-group-item list-group-item-action list-group-item-light">$client.getName()</a>
                #end
            </div>
        </div>
    </div>
</div>